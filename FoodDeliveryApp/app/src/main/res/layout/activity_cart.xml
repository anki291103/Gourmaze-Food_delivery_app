<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8E1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fancy Cart Header -->
            <TextView
                android:id="@+id/cartHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ›’ Your Cart!!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/cart_header_bg"
                android:layout_marginBottom="16dp" />

            <!-- Card-style container for cart items -->
            <LinearLayout
                android:id="@+id/cartContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFFFFF"
                android:clipToPadding="false"
                android:background="@drawable/cart_card_bg"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Grand Total -->
            <TextView
                android:id="@+id/cartGrandTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grand Total: â‚¹0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E65100"
                android:gravity="end"
                android:padding="8dp"
                android:background="#FFF3E0"
                android:layout_marginBottom="10dp"
                android:backgroundTintMode="multiply"
                android:layout_marginTop="8dp"
                android:elevation="2dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Checkout"
            android:backgroundTint="#00C853"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnClearCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear Cart"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
